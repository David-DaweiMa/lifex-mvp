{
  "name": "lifex-mvp",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:web",
    "dev:web": "cd packages/web && npm run dev",
    "build": "npm run build:shared && npm run build:web",
    "build:shared": "cd packages/shared && npm run build",
    "build:web": "cd packages/web && npm run build",
    "build:vercel": "node vercel-build.js",
    "build:local": "npm run build:shared && cd packages/web && npm run build && cd .. && xcopy web\\.next ..\\..\\.next /E /I /Y /H",
    "start": "npm run start:web",
    "start:web": "cd packages/web && npm run start",
    "lint": "npm run lint:shared && npm run lint:web",
    "lint:shared": "cd packages/shared && npm run lint",
    "lint:web": "cd packages/web && npm run lint",
    "type-check": "npm run type-check:shared && npm run type-check:web",
    "type-check:shared": "cd packages/shared && npm run type-check",
    "type-check:web": "cd packages/web && npm run type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf .next out packages/*/dist packages/*/.next",
    "build:analyze": "ANALYZE=true npm run build",
    "deploy": "npm run clean && npm run build",
    "postbuild": "echo 'Build completed successfully!'",
    "setup:monorepo": "npm install && npm run build:shared"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.55.0",
    "critters": "^0.0.25",
    "dotenv": "^17.2.1",
    "fs-extra": "^11.2.0",
    "lucide-react": "^0.539.0",
    "next": "^15.4.6",
    "openai": "^4.28.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "resend": "^3.5.0"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "autoprefixer": "^10.4.21",
    "eslint": "latest",
    "eslint-config-next": "latest",
    "postcss": "^8.5.6",
    "prettier": "latest",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
